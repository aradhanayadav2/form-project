

datasource db {
  provider = "postgresql"
  url     =  env("DATABASE_URL")
}


generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

model User {
  id        String   @id @default(uuid())
  name      String   @unique
  email     String   @unique 
  password  String
  address   String
  phone     String    @unique
  createdAt DateTime @default(now())
  profile   profile?
}

model profile{
  id  String @id @default(uuid())
  image String?
  createdAt  DateTime @default(now())
  userId  String? @unique
  user   User? @relation(fields: [userId], references: [id])
}
